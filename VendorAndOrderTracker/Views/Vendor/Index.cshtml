@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No Vendors have been added yet!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
    }
    <a href='/vendor/new'>Add a new Vendor</a>
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Clear All Vendors</button>
  </form> 
    <p><a href='/'>Back home</a></p>